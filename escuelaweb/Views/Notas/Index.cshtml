@model IEnumerable<escuelaweb.Models.Notum>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDocente.cshtml";
}

<h1>Notas</h1>

<p>
    <a asp-action="Create" class="btn btn-success mx-1"><i class="fa fa-solid fa-plus"></i> Crear Nuevo</a>
    <a asp-action="Index" class="btn btn-success mx-1"><i class="fa fa-solid fa-plus"></i> Guardar</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FkIdAlumno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkIdDocente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkIdMateria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkIdGrado)
            </th>
            <th>
               Nota 1
            </th>
            <th>
               Nota 2
            </th>
            <th>
                Nota 3
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trimestre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FkIdAlumno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkIdDocente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkIdMateria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkIdGrado)
            </td>
            <td>
                <input class="col-1"/>
            </td>
            <td>
                <input class="col-1"/>
            </td>
            <td>
                <input class="col-1"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trimestre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdNota" class="btn btn-outline-info mx-1"><i class="fa fa-solid fa-pencil"></i> Editar</a> 
                <a asp-action="Details" asp-route-id="@item.IdNota" class="btn btn-outline-success mx-1"><i class="fa fa-solid fa-file-pen"></i> Detalles</a> 
                <a asp-action="Delete" asp-route-id="@item.IdNota" class="btn btn-outline-danger mx-1"><i class="fa fa-solid fa-trash-can"></i> Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
