@model IEnumerable<escuelaweb.Models.Alumno>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDocente.cshtml";
}

<h1>Alumno</h1>

<p>
    <a asp-action="Create" class="btn btn-success mx-1"><i class="fa fa-solid fa-plus"></i> Crear Nuevo</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FecNac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrasena)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FecNac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contrasena)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAlumno" class="btn btn-outline-info mx-1"><i class="fa fa-solid fa-pencil"></i> Editar</a> 
                <a asp-action="Details" asp-route-id="@item.IdAlumno" class="btn btn-outline-success mx-1"><i class="fa fa-solid fa-file-pen"></i> Detalles</a> 
                <a asp-action="Delete" asp-route-id="@item.IdAlumno" class="btn btn-outline-danger mx-1"><i class="fa fa-solid fa-trash-can"></i> Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
